<% 3.times do |row| %>
    <div class="row">
      <% 3.times do |col| %>
        <span class="col">
          <% if game[row, col].nil? %>

            <!-- Post method on games/:game_id/moves -->
            <%= button_to game.current_symbol, game_moves_path(game), params: {row: row, col: col}, method: :post, remote: true  %>        
          
            <% else %>
            <%= game[row, col] %>
          <% end %>
        </span>
      <% end %>
    </div>
  <% end %>

  <%= game.state %>