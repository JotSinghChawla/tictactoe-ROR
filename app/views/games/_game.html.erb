<% 3.times do |row| %>
    <div class="row">
      <% 3.times do |col| %>
        <span class="col">
          <% if game[row, col].nil? %>

            <!-- Post method on games/:game_id/moves -->
            <%= button_to "", game_moves_path(game), params: {row: row, col: col}, method: :post, remote: true, class: "inside_button"  %>        
          
            <% else %>
            <%= game[row, col] %>
          <% end %>
        </span>
      <% end %>
    </div>
  <% end %>

  
<%= link_to 'New Game', "/games", class: "btn btn-primary new_game_button" %>

